// RUTA DEL ARCHIVO: firebase.json (REEMPLAZAR TODO EL CONTENIDO)
{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/firebase-config.json",
        "function": "getFirebaseConfig"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}